        */

        // Stage 7: Building Docker Image
        /* 
        stage('Building Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t yousseeef/tp-foyer:5.0.0 .'
            }
        }
        */

        // Stage 8: Push Docker Image to DockerHub
        /* 
